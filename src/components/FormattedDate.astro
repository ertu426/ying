---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time class="text-xs text-zinc-400 mb-0.5" datetime={date.toISOString()}>
    {
        date.toLocaleDateString('zh-cn', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
        })
    }
</time>