---
import type { GetStaticPaths, Page } from "astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = await getCollection("blog");
  return paginate(posts, { pageSize: 10 });
};

interface Post {
  data: {
    title: string;
    description: string;
    // Transform string to Date object
    pubDate: Date;
    updatedDate: Date | undefined;
    heroImage: string | undefined;
    author: string;
    categories: string;
    tags: string[];
    views: number;
  };
  id: string;
}

const { page } = Astro.props as { page: Page<Post> };

console.log(page.data);
---

<Layout title="首页" description="首页 Ying Astro Blog">
  <article class="recent-posts section">
    <h2 class="section-header">随笔<i class="ri-quill-pen-line"></i></h2>

    <section>
      {
        page.data.map((post) => (
          <article class="article-card">
            <div class="article-img-box">
              <img
                src={post.data.heroImage}
                class="article-img"
                sizes="(max-width: 1600px) 100vw, 1600px"
              />
            </div>
            <div class="article-box">
              <FormattedDate date={post.data.pubDate} />
              <a href={`/blog/${post.id}`} class="hover:underline">
                {post.data.title}
              </a>
            </div>
          </article>
        ))
      }
    </section>

    <nav class="flex justify-between pt-2">
      {page.url.prev && <a href={page.url.prev}>上一页</a>}
      {
        page.lastPage > 1 && (
          <span class="text-zinc-400">
            第 {page.currentPage} 页 / 共 {page.lastPage} 页
          </span>
        )
      }
      {page.url.next && <a href={page.url.next}>下一页</a>}
    </nav>
  </article>
</Layout>
